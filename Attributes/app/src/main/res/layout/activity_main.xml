<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Алексей Попов, Гр: Пиз-231"
        android:textSize="18sp"
        android:layout_margin="16dp" />

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:text="Пример текста"
        android:inputType="text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_bg_red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Фон красный"
                android:layout_margin="4dp" />



            <Button
                android:id="@+id/button_size_large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Размер 24"
                android:layout_margin="4dp" />

            <Button
                android:id="@+id/button_text_blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Текст синий"
                android:layout_margin="4dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_bg_green"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Фон зеленый"
                android:layout_margin="4dp" />

            <Button
                android:id="@+id/button_size_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Размер 12"
                android:layout_margin="4dp" />

            <Button
                android:id="@+id/button_text_red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Текст красный"
                android:layout_margin="4dp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>